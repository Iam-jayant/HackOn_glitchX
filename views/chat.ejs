<%- layout("/layouts/boilerplate") %>

<div class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center text-center">
    <div class="mb-4">
        <h2 class="fw-bold"><span class="highlight">Hi, I'm Vibesync.</span></h2>
        <p class="subtext">How can I help you today?</p>
    </div>
    
    <div class="chat-box">
        <input type="text" class="chat-input" placeholder="Message Vibesync">
        <button class="send-btn">
            <i class="fa-solid fa-paper-plane"></i>
        </button>
    </div>
</div>

<style>
    body {
        background-color: #1E1E22;
        color: white;
    }

    .logo {
        width: 60px;
        margin-bottom: 10px;
    }

    .highlight {
        color: #4A79FF;
    }

    .subtext {
        font-size: 1rem;
        color: #AAA;
    }

    .chat-box {
        background: #292A2D;
        border-radius: 15px;
        padding: 12px 16px;
        display: flex;
        align-items: center;
        width: 50%;
        min-width: 300px;
        max-width: 600px;
    }

    .chat-input {
        flex-grow: 1;
        border: none;
        background: transparent;
        color: white;
        font-size: 1rem;
        outline: none;
    }

    .send-btn {
        background: transparent;
        border: none;
        color: #AAA;
        font-size: 1.2rem;
        cursor: pointer;
    }

    .send-btn:hover {
        color: white;
    }
</style>
